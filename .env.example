# Database Configuration
PORT=8080
DB_USER=root
DB_PASS=your_password
DB_Name=node_backend
DB_HOST=localhost

# Environment
NODE_ENV=development

# JWT Secrets (Change these in production!)
ACCESS_TOKEN_SECRET=your-access-token-secret-key
